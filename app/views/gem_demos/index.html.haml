.container
  .main_head
    %h1.center
      Check out all the Faked Users!
  %br
    .row
      .col.s12
        .row
          - @gem_demo.each do |demo|
            .col.m6
              .card.fake-user.blue.darken-1
                .card-content.white-text
                  %span.card-title
                    .center
                      Faked User!
                  %ul
                    %li
                      %span
                        First Name :
                        = demo.first_name
                    %li
                      %span
                        Last Name :
                        = demo.last_name
                    %li
                      %span
                        Birth Date :
                        = demo.birthdate
                    %li
                      %span
                        Address :
                        = demo.address
                    %li
                      %span
                        City :
                        = demo.city
                    %li
                      %span
                        State :
                        = demo.state
                    %li
                      %span
                        Zip :
                        = demo.zip

  = render 'gempagelinks'


